<body>
  <div class="tabs">
    <div class="tab active" onclick="loadTab('bloom.html', this)">Bloom</div>
    <div class="tab" onclick="loadTab('garden.html', this)">Garden</div>
  </div>
  <div id="content">
    <iframe id="tabFrame" src="bloom.html"></iframe>
  </div>

  <script>
    function loadTab(page, el) {
      document.getElementById('tabFrame').src = page;
      document.querySelectorAll('.tab').forEach(tab => tab.classList.remove('active'));
      el.classList.add('active');
    }
  </script>
</body>
